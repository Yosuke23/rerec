 <% provide(:title, "メモの編集") %>
 <h1 style="font-weight: bold; margin-top: -30px;">読書メモ</h1>
  <div style="text-align: center;">
  </div>
 <%= form_with model: @impression do |f| %>
   <%#= render 'shared/error_messages', object: f.object %>
  <div class="field">
   <%= f.hidden_field :image %>
   
   <%= f.label "本のタイトル" %>
   <%= f.text_field :title, placeholder: 'タイトル入力は必須です', class: 'form-control' %>
   
   <%= f.label "読書メモ" %>
   <%= f.text_area :content, placeholder: "1〜2000文字以内で入力してください" %>
  </div>
   <%= f.submit "更新", class: "btn btn-primary" %>
   <%# <span class="picture"> %>
   <%#= f.file_field :image, accept: 'image/jpeg, image/gif, image/png' %>
  </span>
 <% end %>