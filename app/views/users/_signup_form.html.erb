<div class="row">
 <div class="col-md-6 col-md-offset-3">
  <%= form_for(@user, url: yield(:url)) do |f| %>
   <%= render 'shared/error_messages', object: f.object %>

   <%= f.label :お名前 %>
   <%= f.text_field :name, :placeholder =>  '例）Yōsuke', class: 'form-control' %>

   <%= f.label :メールアドレス %> 
   <%= f.email_field :email, :placeholder => '例）Yōsuke@rerec.com', class: 'form-control' %>

   <%= f.label :パスワード %>
   <%= f.password_field :password, :placeholder => "8文字以上", class: 'form-control' %>
   <%= f.label :password_confirmation, 'パスワード（確認入力）' %>
   <%= f.password_field :password_confirmation, :placeholder => "8文字以上", class: 'form-control' %>
   <%= f.submit yield(:button), class: "btn btn-primary" %>
  <% end %>
 </div>
</div>