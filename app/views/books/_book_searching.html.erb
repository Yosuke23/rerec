
<div class="container.card.card-book" style="text-align:center;">
 <div class="row">
  <div class="col-2.col-md-3">
   <hr>
   <%= link_to books_path(googlebooksapi_id: book.googlebooksapi_id), method: :post do %>
    <% if book.image? %>
     <%= image_tag book.image, height: '180' %>
    <% else %>
     <%= image_tag 'book-image.png', height: '180' %>
    <% end %>
   <% end %>
  </div>
   <%= link_to books_path(googlebooksapi_id: book.googlebooksapi_id), method: :post do %>
    <button type="button" class="btn btn-info w-25" style="margin-top:5px;">この本を選ぶ</button>
   <% end %>
  <div class="book-data">
   <ul class="wrap" style="list-style-type: none; margin-top: 12px;">
    <li style="margin-left: 30px; margin-right: 5px;">著作：<span class="book"><%= book.title %></span></li>
    <li style="margin-left: 30px; margin-right: 5px;">著者：<span class="book"><%= book.author %></span></li>
   <% if book.description.present? %>
    <li style="margin-left: 30px; margin-right: 10px;">内容：<span class="book"><%= strip_tags book.description %></span></li>
   <% else %>
    <li style="margin-left: 30px; margin-right: 5px;">内容：内容：<span class="book">情報がありません</span></li>
   <% end %>
    <li style="margin-left: 30px; margin-right: 5px;">ページ数：<span class="book"><%= book.page_count %></span>ページ</li>
   </ul>
   </div>
  </div>
 </div>
</div>
