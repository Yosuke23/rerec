<div class="col-12.col-md-6">
 <div class="container.card.card-book">
  <div class="row">
   <%= link_to books_path(googlebooksapi_id: book.googlebooksapi_id), class: 'col-3 col-lg-4', method: :post do %>
     <% if book.image? %>
      <%= image_tag book.image, height: '100' %>
     <% else %>
      <%= image_tag 'book-image.png', height: '100' %>
　　　<% end %>
　　<% end %>

   <%= link_to books_path(googlebooksapi_id: book.googlebooksapi_id), class: 'col-9 col-lg-8', method: :post do %>
     <%= book.title %>
     <%= book.author %>
   <% end %>
  </div>
 </div>
</div>